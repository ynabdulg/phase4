<%= form_for(@store) do |s| %>
	<%= hidden_field_tag "store[author_ids][]", nil%>
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% @store.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<table border="0" cellspacing="5" cellpadding="5">
		<tr valign="top">
			<td>
				<h2>store details:</h2>
				<div class="input-field">
			    <%= f.label :name %><br />
			    <%= f.text_field :name %>
			  </div>
			  
			  <div class="input-field">
			    <%= f.label :street %><br />
			    <%= f.text_field :street %>
			  </div>
			  
			  <div class="input-field">
			    <%= f.label :zip %><br />
			    <%= f.text_field :zip %>
			  </div>
			  
			  <div class="input-field">
			    <%= f.label :city %><br />
			    <%= f.text_field :city %>
			  </div>
			  
			  <div class="input-field">
			    <%= f.label :state %><br />
			    <%= f.text_field :state %>
			  </div>
			  
			  <div class="input-field">
			    <%= f.label :phone %><br />
			    <%= f.text_field :phone %>
			  </div>

	
				<div class="input-field">
			    <%= f.label :latitude %><br />
			    <%= f.number_field :latitude %>
			  </div>
			  
			  <div class="input-field">
			    <%= f.label :longitude %><br />
			    <%= f.number_field :longitude %>
			  </div>
			  
			
			<div class="col s3">     
					<%= f.check_box :active, {:multiple => true, :active=>store.active}, true, nil %>     
					<%= f.label :active, :for=>store.active %>  
				</div>
				
			<div class="col s3">     
					<%= f.check_box :active, {:multiple => true, :active=>store.active}, false, nil %>     
					<%= f.label :active, :for=>store.active %>  
				</div>

			  <div class="actions">    
			  	<%= f.submit :class=>"btn waves-effect waves-light green" %>     
			  	<%= link_to 'Cancel', stores_path, :class => 'waves-effect waves-light btn red' %>   
			  </div>
			</td>
			<td width="25">&nbsp;</td>
		</tr>
	</table>
<% end %>