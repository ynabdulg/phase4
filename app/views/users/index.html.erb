<div class="center white">
<h2>Users in the System</h2>
</div>
<div class="col s8">
<table class="bordered centered white">
  <thead>
          <tr>
              <th>User</th>
              <th>Edit</th>
              <th>Delete</th>
          </tr>
  </thead>
  <tbody>

<% @users.each do |user| %>
  <tr>
  <td><button class="waves-effect waves-teal btn purple"><i class="material-icons right">person</i><%= link_to user.id, user_path(user), :class=>"white-text" %> </button></td>
  <td><button class="waves-effect waves-teal btn green"><i class="material-icons right">edit</i><%= link_to 'Edit', edit_user_path(user), :class=>"white-text" %> </button></td> 
  <td><button class="waves-effect waves-teal btn red"><i class="material-icons right">delete</i><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete, :class=>"white-text" %> </button></td>
  
  </tr>
<% end %>
  </tbody>
</table>
</div>

<br />
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">

</span>
</div>
