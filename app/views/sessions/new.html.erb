<div class="col s8 centered">
<%= form_for(:sessions, url: sessions_path) do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email %>
    
    <%= f.label :password %>
    <%= f.password_field :password %>
    
    <%= f.submit "Login", :class=>"btn waves-effect waves-light btn green" %>
<% end %>
</br>
<button class="waves-effect waves-teal btn blue"><i class="material-icons right">account_circle</i><%= link_to "Continue as Guest", main_path, :class=>"white-text" %></button>
</div>
