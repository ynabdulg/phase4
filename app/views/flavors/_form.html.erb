<%= form_for(@flavor) do |f| %>

  <% if @flavor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@flavor.errors.count, "error") %> prohibited this flavor from being saved:</h2>

      <ul>
      <% @flavor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div class="col s8 centered">
	<table border="0" cellspacing="5" cellpadding="5">
		<tr valign="top">
			<td>
				<h2>Flavor details:</h2>

  <div class="input-field">
		<%= f.label  :name %><br />
		<%= f.text_field :name %>
	</div>
		
	<div class="field">
			    <%= f.label :active %><br />
			    <%= f.select :active, options_for_select([['Active', true], ['Inactive',false]]), :prompt => "Select ..." %>
	</div>

  <div class="actions">    
			  	<%= f.submit :class=>"btn waves-effect waves-light btn green" %>     
			  	<%= link_to 'Cancel', flavors_path, :class => 'waves-effect waves-light btn red' %>   
			  </div>
			</td>
			<td width="25">&nbsp;</td>
		</tr>
	</table>
	</div>
<% end %>
