<h2>employees in the System</h2>

<table  class="striped" >
  <tr>
    <th>employee</th>
    <th></th>
    <th></th>
  </tr>

<% @employees.each do |employee| %>
  <tr>
    <td><%= link_to employee.name, employee_path(employee) %></td>
    <td><%= link_to 'Edit', edit_employee_path(employee), :class=> "waves-effect waves-light btn light-blue" %></td> 
    <td><%= link_to 'Destroy', employee, confirm: 'Are you sure?', method: :delete,  :class=> "waves-effect waves-light btn red" %></td>
  </tr>
<% end %>
</table>
<br />
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate @employees, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>

<br />