
<div class="center white">
<h2>Store Flavors in the System</h2>
</div>
<div class="col s8">
<table class="bordered centered white">
  <thead>
          <tr>
              <th>Store_Flavor</th>
              <th>Edit</th>
              <th>Delete</th>
          </tr>
  </thead>
  <tbody>

<% @store_flavors.each do |store_flavor| %>
  <tr>
  <td><button class="waves-effect waves-teal btn purple"><i class="material-icons right">store</i><%= link_to store_flavor.id, store_flavor_path(store_flavor), :class=>"white-text" %> </button></td>
  <td><button class="waves-effect waves-teal btn green"><i class="material-icons right">edit</i><%= link_to 'Edit', edit_store_flavor_path(store_flavor), :class=>"white-text" %> </button></td> 
  <td><button class="waves-effect waves-teal btn red"><i class="material-icons right">delete</i><%= link_to 'Destroy', store_flavor, confirm: 'Are you sure?', method: :delete, :class=>"white-text" %> </button></td>
  
  </tr>
<% end %>
  </tbody>
</table>
</div>

<br />
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">

</span>
</div>
<br />
<div class="Section">
<div class="col s1 center"> 
</div>

</div>






