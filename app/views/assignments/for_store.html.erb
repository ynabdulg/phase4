<h2>Assignments for Given Store</h2>
<div class="col s8">
<table class="bordered centered">

<% @assignments.each do |assignment| %>
  <tr>
    <td><%= link_to assignment.name, assignment_path(assignment) %></td>
    <td><%= link_to 'Edit', edit_assignment_path(assignment), :class=> "waves-effect waves-light btn light-blue" %></td> 
    <td><%= link_to 'Destroy', assignment, confirm: 'Are you sure?', method: :delete,  :class=> "waves-effect waves-light btn red" %></td>
  </tr>
<% end %>
</table>
<br />
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate @assignments, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>
</div>
<br />
<div class="Section"></div>
<div class="col s1"> 
</div>
<div class="col s3 center">       
    <!-- SIDEBAR -->       
    <%= render partial: 'partials/assignments/quick_links' %>     
</div> 
</div>