<div class="center white">
<h2>Store details</h2>
</div>
<div class="col s8">
<table class="bordered centered white">
  <thead>
          <tr>
              <th>Name</th>
              <th>Street</th>
              <th>City</th>
              <th>State</th>
              <th>ZipCode</th>
              <th>Phone Number</th>
              <th>Latitude</th>
              <th>Longitude</th>
              <th>Active</th>
          </tr>
  </thead>
  <tbody>
          <tr>
            <td><%= @store.name %></td>
            <td><%= @store.street %></td>
            <td><%= @store.city %></td>
            <td><%= @store.state %></td>
            <td><%= @store.zip %></td>
            <td><%= @store.phone %></td>
            
            <td><%= @store.latitude %></td>
            <td><%= @store.longitude %></td>
            <td><%= @store.active %></td>
          </tr>
  </tbody>
</table>
</br>
</br>
<button class="waves-effect waves-light btn red"><i class="material-icons right">edit</i><%= link_to 'Edit', edit_store_path(@store), :class=>"white-text" %> </button> 
<button class="waves-effect waves-light btn green"><i class="material-icons right">keyboard_backspace</i><%= link_to 'Back', stores_path, :class=>"white-text" %> </button> 
</div>

<div class="col s1">    
</div> 
<div class="col s3">       
        <!-- SIDEBAR CONTENT GOES HERE -->       
        <%= render partial: 'partials/stores/quick_links' %>     
</div> 



