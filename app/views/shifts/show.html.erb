<div class="center white">
<h2>Shift details</h2>
</div>
<div class="col s8">
<table class="bordered centered white">
  <thead>
    <tr>
      <th>Assignment</th>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @shift.assignment_id %></td>
        <td><%= @shift.date.strftime("%m/%d/%y") %></td>
        <td><%= @shift.start_time.strftime("%I:%M%p") %></td>
        <td><%= @shift.end_time .strftime("%I:%M%p") unless shift.end_time.nil? %></td>
        <td><%= @shift.notes %></td>
      </tr>
  </tbody>
</table>
</br>
</br>
<button class="waves-effect waves-light btn red"><i class="material-icons right">edit</i><%= link_to 'Edit', edit_shift_path(@shift), :class=>"white-text" %> </button> 
<button class="waves-effect waves-light btn green"><i class="material-icons right">keyboard_backspace</i><%= link_to 'Back', shifts_path, :class=>"white-text" %> </button> 
</div>

<div class="col s1">    
</div> 
<div class="col s3">       
        <!-- SIDEBAR CONTENT GOES HERE -->       
        <%= render partial: 'partials/shifts/quick_links' %>     
</div> 